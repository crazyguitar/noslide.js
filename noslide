#!/usr/bin/env node

/*
 * noslide
 */

var commander = require('commander')
  , noslide = require('./lib/slide.js')
  , theme = require('./lib/themes/Ptt');

commander.version('1.0.0')
         .usage('<markdown>')
         .parse(process.argv);

args = commander.args;

if (args != 2)
    console.log('Usage: noslide ' + commander.usage());

markdown = args[0];
let slide = new noslide(markdown, theme);
slide.render();

